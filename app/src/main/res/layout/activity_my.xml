<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MyActivity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="New Button"
            android:id="@+id/button10"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="New Button"
            android:id="@+id/button11"
            android:layout_alignBottom="@+id/button10"
            android:layout_toRightOf="@+id/button10"
            android:layout_toEndOf="@+id/button10" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="New Button"
            android:id="@+id/button12"
            android:layout_toEndOf="@+id/button11"
            android:layout_alignTop="@+id/button11"
            android:layout_alignRight="@+id/button15"
            android:layout_alignEnd="@+id/button15" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="New Button"
            android:id="@+id/button13"
            android:layout_below="@+id/button10"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="New Button"
            android:id="@+id/button14"
            android:layout_toEndOf="@+id/button10"
            android:layout_below="@+id/button10"
            android:layout_toRightOf="@+id/button10" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="New Button"
            android:id="@+id/button15"
            android:layout_toEndOf="@+id/button11"
            android:layout_below="@+id/button11"
            android:layout_toRightOf="@+id/button11" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="New Button"
            android:id="@+id/button16"
            android:layout_toStartOf="@+id/button15"
            android:layout_toEndOf="@+id/button17"
            android:layout_below="@+id/button15"
            android:layout_toRightOf="@+id/button17"
            android:layout_alignRight="@+id/button15"
            android:layout_alignEnd="@+id/button15" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="New Button"
            android:id="@+id/button17"
            android:layout_toEndOf="@+id/button18"
            android:layout_below="@+id/button13"
            android:layout_toRightOf="@+id/button18" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="New Button"
            android:id="@+id/button18"
            android:layout_toEndOf="@+id/button14"
            android:layout_below="@+id/button13"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>
</RelativeLayout>
